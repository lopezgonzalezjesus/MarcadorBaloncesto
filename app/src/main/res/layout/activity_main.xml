<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/local"
            android:id="@+id/Local"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/visitante"
            android:id="@+id/textView2"
            android:layout_weight="0.36"
            android:gravity="center"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="120dp"
            android:background="@drawable/border"
            android:textColor="@color/blanco"
            android:id="@+id/MarcadorLocal"
            android:layout_above="@+id/Local1"
            android:layout_alignRight="@+id/Local3"
            android:layout_alignEnd="@+id/Local3"
            android:layout_gravity="left"
            android:layout_weight="0.5"
            android:gravity="center|top"
            android:layout_marginRight="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="120dp"
            android:background="@drawable/border"
            android:textColor="@color/blanco"
            android:id="@+id/MarcadorVisitante"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/Visitante1"
            android:layout_alignStart="@+id/Visitante1"
            android:layout_weight="0.5"
            android:gravity="center|top" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3.6"
        android:gravity="center_vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/uno"
            android:id="@+id/Local1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left"
            android:layout_weight="0.6"
            android:gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/dos"
            android:id="@+id/Local2"
            android:layout_alignTop="@+id/Local1"
            android:layout_toRightOf="@+id/Local1"
            android:layout_toEndOf="@+id/Local1"
            android:layout_gravity="left"
            android:layout_weight="0.6"
            android:gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/tres"
            android:id="@+id/Local3"
            android:layout_above="@+id/button2"
            android:layout_toRightOf="@+id/Local2"
            android:layout_toEndOf="@+id/Local2"
            android:layout_gravity="left"
            android:layout_weight="0.6"
            android:gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/uno"
            android:id="@+id/Visitante1"
            android:layout_above="@+id/button6"
            android:layout_toRightOf="@+id/Local3"
            android:layout_toEndOf="@+id/Local3"
            android:layout_gravity="right"
            android:layout_weight="0.6"
            android:layout_marginLeft="35dp"
            android:gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/dos"
            android:id="@+id/Visitante2"
            android:layout_above="@+id/button6"
            android:layout_toRightOf="@+id/Visitante1"
            android:layout_toEndOf="@+id/Visitante1"
            android:layout_gravity="right"
            android:layout_weight="0.6"
            android:gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/tres"
            android:id="@+id/Visitante3"
            android:layout_alignTop="@+id/Visitante2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_weight="0.6"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3.6">

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/unoMenos"
            android:id="@+id/LocalResta"
            android:layout_below="@+id/Local2"
            android:layout_toRightOf="@+id/Local1"
            android:layout_toEndOf="@+id/Local1"
            android:layout_weight="0.6"
            android:gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:id="@+id/Reset"
            android:layout_weight="0.6"
            android:layout_marginRight="138dp"
            android:layout_marginLeft="138dp" />

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/unoMenos"
            android:id="@+id/VisitanteResta"
            android:layout_below="@+id/Local2"
            android:layout_toRightOf="@+id/Local1"
            android:layout_toEndOf="@+id/Local1"
            android:layout_weight="0.6"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
